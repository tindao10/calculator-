<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
   <LinearLayout
       android:id="@+id/buttons_tab"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="false"
       android:layout_marginBottom="16dp"
       android:background="#F1F1F1"
       android:orientation="vertical">

      <com.google.android.material.button.MaterialButton
          android:id="@+id/button_history"
          android:layout_width="wrap_content"
          android:layout_height="35dp"
          android:layout_columnWeight="1"
          android:background="@color/white"
          android:shadowColor="#FFFFFF"
          android:text="See History"
          android:textColor="@color/black"
          android:textSize="11sp"
          android:textStyle="bold"
          app:backgroundTint="#FFFFFF"/>

      <TextView
          android:id="@+id/solution_tv"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_above="@id/result_tv"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginBottom="16dp"
          android:textAlignment="textEnd"
          android:textColor="@color/black"
          android:textSize="32dp" />

      <TextView
          android:id="@+id/result_tv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_above="@id/buttons_laytout"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginBottom="16dp"
          android:text="0"
          android:textAlignment="textEnd"
          android:textColor="@color/black"
          android:textSize="64dp" />

   </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_alignParentBottom="true"
       android:background="#AEB4B5"
       android:paddingVertical="16dp"
       android:id="@+id/buttons_laytout">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_c"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="C"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FF9800"
             app:cornerRadius="36dp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_open_bracket"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="("
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FFFFFF"
             app:cornerRadius="36dp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_close_bracket"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text=")"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FFFFFF"
             app:cornerRadius="36dp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_divide"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="/"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#818180"
             app:cornerRadius="36dp" />

      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_7"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="7"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FFFFFF"
             app:cornerRadius="36dp" />
         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_8"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="8"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FFFFFF"
             app:cornerRadius="36dp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_9"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="9"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FFFFFF"
             app:cornerRadius="36dp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_multiply"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="*"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#818180"
             app:cornerRadius="36dp" />

      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_4"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="4"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FFFFFF"
             app:cornerRadius="36dp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_5"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="5"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FFFFFF"
             app:cornerRadius="36dp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_6"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="6"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FFFFFF"
             app:cornerRadius="36dp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_plus"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="+"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#818180"
             app:cornerRadius="36dp" />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_1"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="1"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FFFFFF"
             app:cornerRadius="36dp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_2"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="2"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FFFFFF"
             app:cornerRadius="36dp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_3"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="3"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FFFFFF"
             app:cornerRadius="36dp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_subtraction"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="-"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#818180"
             app:cornerRadius="36dp" />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_dot"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="."
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FFFFFF"
             app:cornerRadius="36dp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_0"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="0"
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FFFFFF"
             app:cornerRadius="36dp" />

         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_equals"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="="
             android:textColor="@color/black"
             android:textSize="32dp"
             app:backgroundTint="#FFFFFF"
             app:cornerRadius="36dp" />
         <com.google.android.material.button.MaterialButton
             android:id="@+id/buttion_AC"
             style="@style/Widget.Design.FloatingActionButton"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_margin="12dp"
             android:text="AC"
             android:textColor="@color/black"
             android:textSize="20dp"
             app:backgroundTint="#FF9800"
             app:cornerRadius="36dp"/>

      </LinearLayout>

   </LinearLayout>




</RelativeLayout>